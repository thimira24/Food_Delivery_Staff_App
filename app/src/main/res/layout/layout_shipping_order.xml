<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/dark_effect"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:src="@drawable/delivered"
                android:tint="@color/dark_sub_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13:00 PM"
                    android:textColor="@color/dark_sub_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer name"
                    android:textColor="@color/dark_sub_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="000000000000000000000"
                    android:textColor="@color/dark_sub_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_order_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textColor="@color/dark_sub_text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash on Delivery"
                    android:textColor="@color/dark_sub_text"
                    android:paddingRight="4dp"
                    android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="items"
                        android:paddingRight="4dp"
                        android:textColor="@color/dark_sub_text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_total"
                        android:paddingRight="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/dark_sub_text"
                        android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ship_now"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_design8"
            android:text="Deliver Now"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>